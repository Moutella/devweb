      ],
      "description": "Importando HttpResponse"
   },	
   "Importando render": {
      "prefix": "import-render",
      "body": [
         "from django.shortcuts import render"
      ],
      "description": "Importando render"
   },
   "Retornando render": {
      "prefix": "return-render",
      "body": [
         "return render(request, '${1:pasta}/${2:pagina}.html', {'${3:param1}': ${3:param1}})"
      ],
      "description": "Retornando render"
   },
   "urls.py do projeto": {
      "prefix": "urls.py-do-projeto",
