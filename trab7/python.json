         "from django.urls import path",
         "from django.conf.urls import include",
         "from django.contrib import admin",
         " ",
         "urlpatterns = [",
         "   path('${1:pasta}/', include('${1:pasta}.urls')),",
         "   path('admin/', admin.site.urls),",
         "]"   
      ],
      "description": "urls.py do projeto"
   },
   "urls.py da aplicacao": {
      "prefix": "urls.py-da-aplicacao",
      "body": [
         "from django.urls import path",
         "from . import views",
         " ",
         "app_name = '${1:aplicacao}'",
         " ",
         "urlpatterns = [",
         "   path('', views.index, name='index'),",
         "   path('${2:caminho}/', views.${3:view}, name='${3:view}'),",
         "]"
      ],
      "description": "urls.py do projeto"
   },
   "path-include": {
